{
    "parser": "vue-eslint-parser",
    "parserOptions": {
        "ecmaVersion": 2019,
        "parser": "@typescript-eslint/parser",
        "sourceType": "module",
        "extraFileExtensions": [ ".vue" ]
    },
    "plugins": [
        "vue",
        "@typescript-eslint"
    ],
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:vue/vue3-recommended"
    ],
    "ignorePatterns": [
        "dist",
        "node_modules",
        ".vscode",
        ".git",
        "public"
    ]
}
