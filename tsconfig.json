{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "esnext",
        "module": "esnext",
        "sourceMap": false,
        "strict": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        "types": [
            "vue",
            "webpack-env"
        ],
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
              ],
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue"
    ],
    "exclude": [
        "node_modules"
    ]
}